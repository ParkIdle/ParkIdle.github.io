<?xml version="1.0" encoding="utf-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
version="1.0">
<xsl:output method="html"/>

    <xsl:template match="/*">
        <xsl:copy>
        </xsl:copy>
        <xsl:apply-templates/>
    </xsl:template>

    <xsl:template match="/*/*">
        <xsl:element name="figlio">
            <xsl:element name="{name()}">
                <xsl:text>
                    <xsl:value-of select="."/>
                </xsl:text>
            </xsl:element>
        </xsl:element>
        <xsl:apply-templates/>
    </xsl:template>

    <xsl:template match="/*/*/*">
        <xsl:apply-templates select="/*/*"/>
        <xsl:apply-templates/>
    </xsl:template>

    <xsl:template match="*">
        <xsl:element name="elem">
            <xsl:attribute name="nomeElem">
                <xsl:value-of select="name()"/>
            </xsl:attribute>
        </xsl:element>
        <xsl:apply-templates/>
    </xsl:template>

    <xsl:template match="text()">
        <xsl:copy></xsl:copy>
    </xsl:template>
</xsl:stylesheet>
